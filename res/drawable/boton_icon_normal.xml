<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#00b7e3" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp"></corners>

            <stroke android:width="4dp" android:color="#00a0c6"></stroke>
        </shape></item>
    <item android:state_focused="true" android:state_window_focused="true"><shape android:shape="rectangle">
            <solid android:color="#00a0c6" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp"></corners>

            <stroke android:width="4dp" android:color="#00a0c6"></stroke>
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="#00a0c6" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp"></corners>

            <stroke android:width="2dp" android:color="#00a0c6"></stroke>
        </shape></item>

</selector>
