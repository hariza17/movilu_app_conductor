<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
             <solid android:color="#ffffff" />

            <corners android:radius="5dp"></corners>

            <padding android:left="15dp" android:right="15dp" />

            <stroke android:width="3dp" android:color="#00a0c6"></stroke>
        </shape></item>
    <item android:state_focused="true" android:state_window_focused="true"><shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <corners android:radius="5dp"></corners>

            <padding android:left="15dp" android:right="15dp" />

            <stroke android:width="3dp" android:color="#00a0c6"></stroke>
        </shape></item>
    <item><shape android:shape="rectangle">
             <solid android:color="#ffffff" />

            <corners android:radius="5dp"></corners>

            <padding android:left="15dp" android:right="15dp" />

            <stroke android:width="1dp" android:color="#00a0c6"></stroke>
        </shape></item>

</selector>
